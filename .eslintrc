{
    "root": true,
    "extends": [
        "plugin:prettier/recommended",
        "plugin:react/recommended"
    ],
    "env": {
        "node": true,
        "es6": true,
        "mocha": true
    },
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module",
        "ecmaVersion": 2017
    },
      "settings": {
        "react": {
          "createClass": "createReactClass",
          "pragma": "React",
          "version": "detect",
          "flowVersion": "0.53"
        },
        "propWrapperFunctions": [
          "forbidExtraProps",
          {
            "property": "freeze",
            "object": "Object"
          },
          {
            "property": "myFavoriteWrapper"
          }
        ],
        "linkComponents": [
          "Hyperlink",
          {
            "name": "Link",
            "linkAttribute": "to"
          }
        ]
      },
    "rules": {
        "one-var": 0,
        "one-var-declaration-per-line": 0,
        "new-cap": 0,
        "consistent-return": 0,
        "arrow-parens": [
            "error",
            "as-needed"
        ],
        "no-param-reassign": 0,
        "comma-dangle": 0,
        "curly": [
            "error",
            "multi-line"
        ],
        "no-shadow": [
            "error",
            {
                "allow": [
                    "req",
                    "res",
                    "err"
                ]
            }
        ],
        "prettier/prettier": [
            "error",
            {
                "trailingComma": "all",
                "tabWidth": 2,
                "semi": true,
                "singleQuote": true,
                "endOfLine": "lf"
            }
        ]
    }
}
